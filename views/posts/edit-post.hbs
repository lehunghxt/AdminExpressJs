<script src="../../../asset/ckeditor/ckeditor.js"></script>
<h4>Sửa bài viết</h4>
<div style="display: flex;justify-content: center;align-items: center;">
    <div class="card shadow mb-4 col-md-6">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    <form action="/post/edit/{{post._id}}" method="POST">
                        <div class="form-group">
                            {{#if UserCan.Suabaiviet}}
                            <input type="submit" value="Cập nhập" class="btn btn-success btn-sm">
                            {{/if}}
                            <a href="/user" class="btn btn-danger btn-sm">Quay lại</a>
                            <input type="hidden" name="csrf" value="{{token}}">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="title" name="title"
                                placeholder="Tiêu đề bài viết" value="{{ post.title }}">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="description" name="description"
                                placeholder="Mô tả bài viết" value="{{ post.description }}">
                        </div>
                        <div class="form-group">
                            <label for="contentPost">Nội dung bài viết</label>
                            <textarea id="contentPost" name="contentPost">{{ post.content }}</textarea>
                            <script>
                                CKEDITOR.replace('contentPost');
                            </script>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>